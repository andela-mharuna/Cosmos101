<h4>Submit Answer</h4>
<%= form_for :answer, url: '/answers' do %>
  <div class="form-group">
    <input type="hidden" class="form-control" id="exampleFormControlInput1" value="<%= @question.id %>"
    name="answer[question_id]" placeholder="John Doe"
      required>
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Name</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="answer[name]" placeholder="John Doe"
      required>
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Email</label>
    <input type="email" class="form-control" id="exampleFormControlInput1"
    name="answer[email]" value="<%= current_user_email %>" placeholder="name@example.com"
      required>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Answer</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="answer[body]" placeholder="What would you like to know?"
      required></textarea>
  </div>
  <div>
    <button type="submit" class="btn btn-primary pull-right">Submit Answer</button>
  <div>
<% end %>
