<h4>Submit Answer</h4>
<%= form_for :answer, url: '/answers' do |a| %>
  <div class="form-group">
    <%= a.hidden_field :question_id, :value => @question.id %>
  </div>
  <div class="form-group">
    <%= a.hidden_field :user_id, :value => session[:user_id] %>
  </div>
  <div class="form-group">
    <%= a.text_field :body, class: "form-control", placeholder: "Enter your answer here" %>
  </div>
  <div>
    <%= a.submit "Submit your answer", class: "btn btn-primary pull-right" %>
  </div>
<% end %>
